@model CalendarMvc.Models.ViewModel.AppointmentViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create Event</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Create an Appointment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "" } })
        @Html.EditorFor(model => model.Body, "TextArea", new { htmlAttributes = new { @class = "" } })
        @Html.EditorFor(model => model.Start)
        @Html.EditorFor(model => model.End)
        @Html.EditorFor(model => model.RemindBeforeMins, "int", new { htmlAttributes = new { @class = "" } })
        @Html.EditorFor(model => model.Attendees, "TextArea", new { htmlAttributes = new { @class = "" } })

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
